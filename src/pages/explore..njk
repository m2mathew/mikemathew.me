---
title: Explore
subtitle: "Pages to explore"
layout: base
permalink: 'explore/index.html'
eleventyNavigation:
  key: Explore
  parent: Home
---

{%- for page in site.explore.stuff -%}
<div class="post-list-item">
    <div class="post-list-item--data">
        <a href="{{ page.link }}">{{ page.title }}</a>
        <hr>
    </div>
    <div class="post-list-item--excerpt">
      <p><em>{{ page.description }}</em></p>
    </div>
</div>
{% if page.more %}
  {%- for more in page.more -%}
    <div class="post-list-item post-list-item--more">
      <div class="post-list-item--data">
          <a href="{{ more.link }}">{{ more.title }}</a>
          <hr>
      </div>
      <div class="post-list-item--excerpt">
        <p><em>{{ more.description }}</em></p>
      </div>
    </div>
  {% endfor %}
{% endif %}
{%- endfor -%}

<h3>Slash Pages</h3>

<p style="margin-top: -10px;">
  <small><em><a href="https://slashpages.net">What are slash pages?</a></em></small>
</p>

{%- for page in site.explore.slash -%}
<div class="post-list-item">
    <div class="post-list-item--data">
        <a href="{{ page.link }}">/{{ page.title }}</a>
        <hr>
    </div>
    <div class="post-list-item--excerpt">
      <p><em>{{ page.description }}</em></p>
    </div>
</div>
{%- endfor -%}
