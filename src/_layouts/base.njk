<!DOCTYPE html>
<html lang="en">
	<head>
    {% include 'head/meta.njk' %}

    <link rel="stylesheet" href="/assets/css/app.css" type="text/css" media="screen" title="no title">

    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=atkinson-hyperlegible:400,400i,700,700i" rel="stylesheet">
	</head>
	<body>

		{% include 'indieweb.njk' %}

    {% include 'header.njk' %}

    {% if homepage %}
      {% include 'homepage.njk' %}
    {% else %}
      {% include 'page_header.njk' %}
    {% endif %}

    <main>
      <div class="
          container
          {% if wide %}container-m{% else %}container-sm{% endif %}
          h-entry
      ">
        {% if postType == 'post' or postType == 'link' or postType == 'note' or postType == 'almanac' %}

          <div class="post__metadata">
            <div>
              <svg class="icon">
                <use xlink:href="#calendar"></use>
              </svg>

              <time class="dt-published" datetime="{{ page.date.toISOString() }}">
                {{ page.date | postDate }}
              </time>

              {% if venue %}&nbsp;@ {{ venue }}{% endif %}
              {% if cinema or mediaType === "event" %}&nbsp;‚Ä¢ üéüÔ∏è{% endif %}
              {% if platform %}&nbsp;‚Ä¢ {{ platform }}{% endif %}
              {% if season %}&nbsp;‚Ä¢ Season {{ season }}{% endif %}
              {% if year %}&nbsp;‚Ä¢ ({{ year }}){% endif %}
            </div>

            {% if tmdbid %}
                <div>
                    <a href="https://www.themoviedb.org/{{ mediaType }}/{{ tmdbid }}" target="_blank">{{ title }} on TMDB</a>
                </div>
            {% endif %}

            {% if giantbomburl %}
              <div>
                <a href="{{ giantbomburl }}" target="_blank">{{ title }} on GiantBomb</a>
              </div>
            {% endif %}

            {% if isbn13 %}
              <div>
                <a href="https://openlibrary.org/isbn/{{ isbn13 }}" target="_blank">{{ title }} on OpenLibrary</a>
              </div>
            {% endif %}

            {% if support %}
              <div>
                Support:&nbsp;{%- for s in support -%}{{ s }}{% if loop.index < support.length %}, {% endif %}{%- endfor -%}
              </div>
            {% endif %}

            <div>
              {%- for tag in tags | sort -%}
                <a class="p-category" href="/blog/tags/{{ tag | slugify }}">#{{ tag }}</a>{% if loop.index < tags.length %}&nbsp;&nbsp; {% endif %}
              {%- endfor -%}
            </div>
          </div>
        {% endif %}

        {{ content | safe }}

        <hr>
      </div>
    </main>

    {% include 'footer.njk' %}

    {% include 'svg.njk' %}
	</body>
</html>
